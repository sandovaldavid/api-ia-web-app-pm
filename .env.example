# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/api-intermediaria
MONGO_USER=admin
MONGO_PASSWORD=password
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=password
MONGODB_PORT=27017

# JWT (JSON Web Token)
JWT_SECRET=TuClaveSecretaMuySeguraParaProduccion
JWT_EXPIRE=7d

# API Django (Gestión de Proyectos)
DJANGO_API_URL=http://localhost:8000/api
DJANGO_API_TOKEN=tu_token_de_django_aqui

# API Ollama (IA)
OLLAMA_API_URL=http://localhost:11434/api
OLLAMA_MODEL=deepseek-coder
OLLAMA_TIMEOUT=60000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Monitoreo
ENABLE_MONITORING=true
MONITORING_INTERVAL=60000
MEMORY_THRESHOLD=85
CPU_THRESHOLD=80

# Cache
ENABLE_AI_RESPONSE_CACHE=true
AI_CACHE_TTL=86400

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PATCH,DELETE

# Seguridad
SECURITY_HELMET_ENABLED=true
